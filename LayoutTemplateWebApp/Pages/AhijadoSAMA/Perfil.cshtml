@page
@model LayoutTemplateWebApp.Pages.AhijadoSAMA.IndexModel
@{
    var userRole = @Model.role;
    Layout = userRole == "7415" ? "_AhijadoLayout" : "_ErrorLayout";

    if (userRole != "7415") Response.Redirect("/ErrorPage");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LayoutTemplateWebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LayoutTemplateWebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <h1 class="Titulo">¡Bienvenido al sistema de Asignación Mentor-Ahijado!</h1>
    <h6 class="textoMentor">Su mentor es:</h6>
    <div class="card" style="width: 304px; height:524px;">
  <div class="card-body">
    <h5 class="card-title">Nombre</h5>
    <h5 class="card-title">Residencia</h5>
    <h5 class="card-title">Carrera</h5>
    <h5 class="card-title">Gustos</h5>
    <h5 class="card-title">Contacto</h5>
    </div>
  </div>
</body>
</html>